#!/usr/bin/env zsh
source ${0:A:h}/../../deploy

QUTEBROWSER_HOME=$XDG_CONFIG_HOME/qutebrowser

install() {
  case $(_os) in
    macos) brew cask install qutebrowser ;;
    arch)  yay --needed --noconfirm -S qutebrowser ;;
  esac
}

# update() {}

link() {
  mklink config.py $QUTEBROWSER_HOME/
  mklink scripts/*.user.js $XDG_DATA_HOME/qutebrowser/greasemonkey/
}

clean() {
  rm -rfv $QUTEBROWSER_HOME
}

init "$@"
