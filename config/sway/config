bar {
  id bottom
  status_command i3status-rs
  font "FiraCode Nerd Font 9"
  colors {
    background $bg
    statusline $fg
    separator $bg-dark
    focused_workspace $bg-dark $bg-dark $fg
    inactive_workspace $bg-dark $bg-dark $fg-alt
    urgent_workspace $bg-dark $bg-dark $alert
  }
}

